<query id="getMenus" action="select">
    <tables>
        <table name="menu" />
    </tables>
    <columns>
        <column name="*" />
    </columns>
    <conditions>
        <condition operation="equal" column="site_srl" var="site_srl" filter="number" />
    </conditions>
    <navigation>
        <index var="sort_index" default="listorder" order="asc" />
    </navigation>
</query>
